{
    "common": {
        "name": "expire",
        "version": "0.0.1",
        "news": {
            "0.0.1": {
                "en": "initial version",
                "de": "Initiale Version",
                "ru": "Первоначальная версия адаптера",
                "pt": "Versão inicial",
                "fr": "Version initiale",
                "nl": "Eerste release"
            }
        },
		"title": "Expire",
        "titleLang": {
            "en": "Expire"
        },
        "desc": {
            "en": "This adapter allows you to change the state value after a specified time.",
            "de": "Mit diesem Adapter können Sie den Statuswert nach einer bestimmten Zeit ändern",
            "ru": "Этот адаптер позволяет менять значение state через заданное время"
        },
        "authors": [
            "shady2k <shady2k@gmail.com>"
        ],
        "platform": "Javascript/Node.js",
        "mode": "daemon",
        "compact": true,
        "icon": "expire.png",
        "supportCustoms": true,
        "materialize": true,
        "enabled": true,
        "extIcon": "https://raw.githubusercontent.com/shady2k/ioBroker.expire/master/admin/expire.png",
        "keywords": ["expire", "logic", "script"],
        "readme": "https://github.com/ioBroker/ioBroker.expire/blob/master/README.md",
        "loglevel": "info",
        "type": "logic",
		"noConfig": true,
        "license": "MIT",
        "messagebox": false,
        "stopTimeout": 5000
    },
    "native": {},
    "objects": [
        {
            "_id": "_design/expire",
            "language": "javascript",
            "views": {
                "state": {
                    "map": "function (doc) { if (doc.type == 'state' && doc.common.custom) emit(doc._id, doc.common); }"
                }
            }
        }
    ]
}
